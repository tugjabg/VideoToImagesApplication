<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:orientation="vertical">
    <ImageView
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/about"/>
    <TextView
        android:layout_gravity="center"
        android:textColor="#000"
        android:text="Author"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:clickable="true"
        android:layout_gravity="center"
        android:text="HDP Solution"
        android:textColor="#2C06E0"
        android:textSize="20sp"
        android:onClick="contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#000"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Private Policy"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:clickable="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="#2C06E0"
        android:ellipsize="end"
        android:text="https://www.facebook.com/profile.php?id=100035420017416"
        android:textSize="20sp"
        android:onClick="contactLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#000"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Email"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_gravity="center"
        android:textColor="#2C06E0"
        android:text="meliodasss2000@gmail.com"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>